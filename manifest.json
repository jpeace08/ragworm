{
  "manifest_version": 3,
  "name": "Ragworm",
  "version": "1.0",
  "description": "Happy box",
  "permissions": ["tabs", "scripting"],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "ragworm@jpeace08.org",
      "strict_min_version": "109.0"
    }
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://kubernetes.io/docs*",
        "*://isocpp.github.io/*"
      ],
      "css": ["styles/styles.css"]
    },
    {
      "matches": ["*://isocpp.github.io/*"],
      "css": ["styles/isocpp.css"]
    },
    {
      "matches": ["*://en.cppreference.com/*"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["js/vim.js"],
      "css": ["styles/vim.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
