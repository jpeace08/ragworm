{
  "manifest_version": 3,
  "name": "Ragworm",
  "version": "1.0",
  "description": "Happy box",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://kubernetes.io/docs*",
        "*://kubernetes.io/blog*",
        "*://isocpp.github.io/*",
        "*://gemini.google.com/*"
      ],
      "css": ["styles/styles.css"]
    },
    {
      "matches": [
        "*://kubernetes.io/docs*",
        "*://kubernetes.io/blog*"
      ],
      "css": ["styles/k8.css"]
    },

    {
      "matches": ["*://*/*"],
      "js": ["js/vim.js"],
      "css": ["styles/vim.css"],
      "run_at": "document_end",
      "all_frames": true
    }

  ]
}
