{
  "manifest_version": 3,
  "name": "Ragworm",
  "version": "1.0",
  "description": "Happy box",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://kubernetes.io/docs*",
        "*://isocpp.github.io/*"
      ],
      "css": ["styles/styles.css"]
    },
    {
      "matches": [
        "*://isocpp.github.io/*"
      ],
      "css": ["styles/isocpp.css"]
    },
    {
      "matches": [
        "*://en.cppreference.com/*"
      ],
      "css": ["styles/cppref.css"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["js/vim.js"],
      "css": ["styles/vim.css"],
      "run_at": "document_end",
      "all_frames": true
    }

  ]
}
